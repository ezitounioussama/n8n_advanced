# n8n Configuration
# ================

# Server Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678

# Timezone
GENERIC_TIMEZONE=UTC

# Security (IMPORTANT: Generate these for production!)
# Generate with: openssl rand -base64 32
N8N_ENCRYPTION_KEY=
N8N_JWT_SECRET=

# Basic Authentication (Optional)
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=
N8N_BASIC_AUTH_PASSWORD=

# Performance
N8N_CONCURRENCY=10

# Optional: Redis for queue mode (for scaling)
# N8N_QUEUE_BULL_REDIS_HOST=redis
# N8N_QUEUE_BULL_REDIS_PORT=6379

# Optional: MongoDB for external database (default is SQLite)
# MONGODB_CONNECTION_URL=mongodb+srv://username:password@cluster.mongodb.net/n8n?retryWrites=true&w=majority
N8N_METRICS=false
N8N_DIAGNOSTICS_ENABLED=false